<h1>ログイン</h1>

<%= form_for @conn, session_path(@conn, :create), [as: :session], fn f -> %>
  <div class="form-group">
    <%= text_input f, :username, placeholder: "ユーザー名", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= password_input f, :password, placeholder: "パスワード", class: "form-control" %>
  </div>
  <%= submit "ログイン", class: "btn btn-primary" %>
<% end %>
